---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	body: string;
	img: ImageMetadata;
}

const { img, title, body } = Astro.props;
---

<li class="link-card">
	<Image alt={title} src={img} />
	<div>
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	</div>
</li>
<style>
	.link-card {
		background: rgb(var(--contrast));
		list-style: none;
		padding: 1rem;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > img {
		display: block;
		width: 20rem;
		height: 20rem;
		object-fit: cover;
		object-position: 0% 0%;
		border-radius: .5rem;
		border: .5rem solid white;
		margin: 0 auto 2rem;
	}
	.link-card > div {
		text-decoration: none;
		line-height: 1.4;
		padding: .5rem 1rem;
		border-radius: 8px;
		opacity: 0.8;
		background: black;
		color: white;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
